<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.dms.pmsandroid.feature.mypage.viewmodel.MyPageViewModel" />

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_back"
        tools:context=".feature.mypage.fragment.MyPageFragment">


        <androidx.cardview.widget.CardView
            android:id="@+id/student_pluspoint_img"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/point_box"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="123dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/student_minusspoint_img"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/point_box"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="123dp" />




        <TextView
                android:id="@+id/student_parent_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="65dp"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

        <ImageView
            android:id="@+id/tudent_parent_edit_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="75dp"
            app:srcCompat="@drawable/ic_baseline_create_24"
            tools:layout_editor_absoluteX="107dp" />


        <Button
            android:id="@+id/start_add_student_btn"
            android:layout_width="289dp"
            android:layout_height="52dp"
            android:layout_marginBottom="300dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="55dp"
            android:backgroundTint="@color/button_background"
            android:text="@string/add_student"
            android:textColor="@color/black"
            android:elevation="30dp"
            android:onClick="@"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>
</layout>
