<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.dms.pmsandroid.feature.meal.viewmodel.MealViewModel" />
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.meal.fragment.MealFragment">



    <TextView
        android:id="@+id/meal_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="급식"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="120dp"
        android:text="2011/21/23"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/before_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <ImageView
        android:id="@+id/after_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="200dp" />
</FrameLayout>
</layout>