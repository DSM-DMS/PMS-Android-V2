<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.dms.pmsandroid.feature.introduce.viewmodel.IntroduceClubViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.introduce.ui.activity.IntroClubActivity">


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="416dp"
        android:layout_height="97dp"
        android:gravity="center"
        android:background="@color/title_bar"
        android:text="@string/intro_club"
        android:background="@color/title_bar"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="@+id/title_tv"
        app:layout_constraintTop_toTopOf="@+id/title_tv"
        app:layout_constraintVertical_bias="0.479"
        app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Intro_club_rc"
        tools:listitem="@layout/item_club"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_width="405dp"
        android:layout_height="383dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spanCount="2"
        tools:layout_editor_absoluteX="0dp"/>

    <TextView
        android:id="@+id/club_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/children_club"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    <View
        android:id="@+id/view"
        android:layout_width="320dp"
        android:layout_height="6dp"
        android:layout_marginBottom="28dp"
        android:background="#F6F6F6"
        app:layout_constraintBottom_toTopOf="@+id/Intro_club_rc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>