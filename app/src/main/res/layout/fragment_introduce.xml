<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.dms.pmsandroid.feature.introduce.viewmodel.MainIntroViewModel"
            />
    </data>


    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.introduce.ui.fragment.IntroduceFragment">


    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="55dp"
        android:text="@string/title_info"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_tilte2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_main_dms"
        android:textColor="#4C75B2"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="50dp"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_marginTop="130dp">


            <ImageView
                android:id="@+id/intro_club_tv"
                android:layout_width="413dp"
                android:layout_height="125dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/box3"
                android:onClick="@{()->vm.clubClicked()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/intro_work_tv"
                android:layout_width="413dp"
                android:layout_height="125dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/box3"
                android:onClick="@{()->vm.workClicked()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/intro_club_tv" />

            <ImageView
                android:id="@+id/intro_dev_tv"
                android:layout_width="413dp"
                android:layout_height="125dp"
                android:layout_marginTop="40dp"
                android:onClick="@{()->vm.devClicked()}"
                android:src="@drawable/box3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/intro_work_tv" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="PMS 개발자를 소개합니다"
                android:textColor="#6C6C6C"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.342"
                app:layout_constraintStart_toStartOf="@+id/intro_club_tv"
                app:layout_constraintTop_toBottomOf="@+id/choice_dev_tv" />

            <TextView
                android:id="@+id/choice_club_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="동아리 소개"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.29"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/intro_club_tv" />

            <TextView
                android:id="@+id/choice_work_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="취업처 소개"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.291"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/intro_work_tv" />

            <TextView
                android:id="@+id/choice_dev_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="개발자 소개"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.291"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/intro_dev_tv" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="대마고의 동아리를 소개합니다"
                android:textColor="#6C6C6C"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.367"
                app:layout_constraintStart_toStartOf="@+id/intro_club_tv"
                app:layout_constraintTop_toBottomOf="@+id/choice_club_tv" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="대마고 학생들이 취업한 회사를 소개합니다"
                android:textSize="12dp"
                android:textColor="#6C6C6C"
                app:layout_constraintEnd_toEndOf="@+id/intro_work_tv"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/choice_work_tv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>