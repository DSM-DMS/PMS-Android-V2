<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.dms.pmsandroid.feature.introduce.viewmodel.IntroduceClubDetailViewModel" />

        <variable
            name="title"
            type="String" />

        <variable
            name="url"
            type="String" />

        <variable
            name="explanation"
            type="String" />

        <variable
            name="member"
            type="String" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_meal_banner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollIndicators="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/club_detail_img"
            app:tabBackground="@drawable/selector_tab_blue"
            app:tabGravity="center"
            app:tabIndicator="@null"
            app:tabPaddingEnd="@dimen/dot_padding"
            app:tabPaddingStart="@dimen/dot_padding" />

        <TextView
        android:id="@+id/title_tv"
        android:layout_width="416dp"
        android:layout_height="97dp"
        android:gravity="center"
        android:text="@{title}"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detail_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="@+id/title_tv"
        app:layout_constraintTop_toTopOf="@+id/title_tv"
        app:layout_constraintVertical_bias="0.479"
        app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

        <View
        android:id="@+id/view"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="@color/border_gray"
        app:layout_constraintBottom_toTopOf="@+id/club_detail_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/border_gray"
            app:layout_constraintBottom_toTopOf="@+id/club_detail_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/club_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_marginBottom="16dp"
            android:text="@{title}"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/intro_club_detail_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/club_detail_img"
            android:layout_width="236dp"
            android:layout_height="126dp"
            glide_image_load="@{url}"
            android:layout_marginTop="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_tv"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <androidx.cardview.widget.CardView
            android:id="@+id/intro_club_detail_img"
            android:layout_width="303dp"
            android:layout_height="113dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toTopOf="@+id/intro_developer_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <TextView
                android:id="@+id/textView"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="27dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/intro_detail_club" />

            <View
                android:id="@+id/view3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="3dp"
                android:background="@color/blue"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/input_content_tv"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:text="@{explanation}" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/intro_developer_img"
            android:layout_width="303dp"
            android:layout_height="175dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <TextView
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="27dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/intro_detail_member" />

            <View
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="3dp"
                android:background="@color/blue"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/input_member_tv"
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:text="@{member}" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>